@model Game



<div class="card mt-5 p-3" style="width: 48rem;">
  <img class="card-img-top img-fluid" src="@Model.Src" alt="Post">
  <div class="card-body">
    <h5 class="card-title h3 text-center">@Model.Title</h5>
    <p class="card-text h5 text-center">@Model.Rating</p>
    <p class="card-text h4 text-center">@Model.Description</p>
    @if (Model.UserId == Context.Session.GetInt32("UserId"))
  {
    <div class="row justify-content-center p-3">
      @* Hide edit & delete if not the author *@
      <form asp-controller="Game" asp-action="Delete" asp-route-postId="@Model.GameId" method="POST">
        <button class="btn btn-outline-danger btn-sm">Delete</button>
      </form>

      <a asp-controller="Game" asp-action="Edit" asp-route-postId="@Model.GameId"
      class="btn btn-sm btn-outline-warning ml-2">
        Edit
      </a>
    </div>
  }
  </div>
</div>

